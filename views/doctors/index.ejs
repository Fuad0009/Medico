<% include ../partials/header %> 

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To Medico</h1>
             <p>View our doctors from all over the country</p>
             <p>
                <a class="btn btn-primary btn-large" href="/doctors/new">Add New Doctor</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% doctors.forEach(function(doctor){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= doctor.image %>">
                   <div class="caption">
                       <h4><%= doctor.name %></h4>
                   </div>
                   <p>
                       <a href="/doctors/<%= doctor._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
